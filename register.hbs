<html>
    <head>
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <title>Signup</title> 
        <link rel="stylesheet" href="../css/register.css">
    </head>
    <body>
        {{>navbar}}

          <!-- Signup box -->
        <div class="signupbox">
            <h1>Signup Here</h1>
            <form action="/register" method="POST">
                <p>First Name</p>
                <input type="text" name="firstname" placeholder="Enter Firstname">
                <p>Last Name</p>
                <input type="text" name="lastname" placeholder="Enter Lastname">
                <p>Email</p>
                <input type="email" name="email" placeholder="Enter Email id">
                <p>Date of birth</p>
                <input type="date" name="dob" placeholder="Enter date of birth">
                <p>Phone Number</p>
                <input type="tel" name="number" placeholder="Enter Phone number" maxlength="10">
                <p>Create password</p>
                <input type="password" name="cpassword" minlength="8" placeholder="Enter password">
                <p>Re-type password</p>
                <input type="password" name="rpassword" placeholder="Re-type password">
                <input type="submit" name="submit" value="Register">
                <a id="acc" href="/login">Already have an account?</a>
            </form>
        </div>

    </body>
</html>
